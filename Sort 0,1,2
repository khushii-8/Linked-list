#include <bits/stdc++.h>
using namespace std;

struct Node {
    int data;
    Node* next;
    Node(int val) {
        data = val;
        next = NULL;
    }
};

// Function to sort linked list of 0s, 1s, and 2s
void sortList(Node* head) {
    int count[3] = {0, 0, 0};

    Node* temp = head;
    // Count 0s, 1s, and 2s
    while (temp != NULL) {
        count[temp->data]++;
        temp = temp->next;
    }

    int i = 0;
    temp = head;
    // Overwrite data
    while (temp != NULL) {
        if (count[i] == 0)
            i++;
        else {
            temp->data = i;
            count[i]--;
            temp = temp->next;
        }
    }
}

// Function to print linked list
void printList(Node* head) {
    while (head != NULL) {
        cout << head->data << " ";
        head = head->next;
    }
    cout << endl;
}

// Driver code
int main() {
    // Creating unsorted list: 2->1->0->2->1->0
    Node* head = new Node(2);
    head->next = new Node(1);
    head->next->next = new Node(0);
    head->next->next->next = new Node(2);
    head->next->next->next->next = new Node(1);
    head->next->next->next->next->next = new Node(0);

    cout << "Original list: ";
    printList(head);

    sortList(head);

    cout << "Sorted list: ";
    printList(head);

    return 0;
}
